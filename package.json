{
  "name": "github-project-helper",
  "displayName": "github-project-helper",
  "author": {
    "name": "Jean-Philippe Maquestiaux",
    "email": "maquejp@gmail.com"
  },
  "description": "Manage GitHub Project V2 statuses directly from VS Code with GitHub CLI integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],

  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "github-project-helper.updateStatus",
        "title": "GPH: Update GitHub Issue Status",
        "category": "GitHub Project Helper"
      },
      {
        "command": "github-project-helper.addWorkspaceProject",
        "title": "GPH: Add Project to Workspace",
        "category": "GitHub Project Helper"
      },
      {
        "command": "github-project-helper.removeWorkspaceProjects",
        "title": "GPH: Remove Workspace Projects",
        "category": "GitHub Project Helper"
      }
    ],
    "keybindings": [
      {
        "command": "github-project-helper.updateStatus",
        "key": "ctrl+alt+g",
        "mac": "cmd+alt+g"
      }
    ],
    "configuration": {
      "title": "GitHub Project Helper",
      "properties": {
        "githubProjectHelper.organizations": {
          "type": "array",
          "default": [],
          "description": "List of GitHub organizations to quickly select from",
          "items": {
            "type": "string",
            "pattern": "^[a-zA-Z0-9][a-zA-Z0-9-]*$",
            "patternErrorMessage": "Must be a valid GitHub organization name"
          }
        },
        "githubProjectHelper.defaultOwner": {
          "type": "string",
          "default": "",
          "description": "Default GitHub organization/owner to pre-fill"
        },
        "githubProjectHelper.defaultProject": {
          "type": "string",
          "default": "",
          "description": "Default project name to pre-select (if found in the organization)"
        },
        "githubProjectHelper.statusOptions": {
          "type": "array",
          "default": ["Todo", "In Progress", "Done"],
          "description": "Available status options to choose from",
          "items": {
            "type": "string"
          }
        },
        "githubProjectHelper.showQuickPickForOwner": {
          "type": "boolean",
          "default": true,
          "description": "Show quick pick for organization selection instead of input box"
        },
        "githubProjectHelper.workspaceProjects": {
          "type": "array",
          "default": [],
          "description": "List of predefined projects for quick access in this workspace",
          "items": {
            "type": "object",
            "required": ["name", "owner"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Project name"
              },
              "owner": {
                "type": "string",
                "description": "GitHub organization/owner"
              },
              "description": {
                "type": "string",
                "description": "Optional project description"
              }
            },
            "additionalProperties": false
          },
          "minItems": 0,
          "uniqueItems": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MaquestiauxLabs/github-project-helper.git"
  },
  "homepage": "https://github.com/MaquestiauxLabs/github-project-helper#readme",
  "bugs": {
    "url": "https://github.com/MaquestiauxLabs/github-project-helper/issues"
  },
  "keywords": [
    "github",
    "project",
    "issues",
    "status",
    "v2",
    "workflow",
    "cli",
    "scm"
  ],
  "license": "MIT"
}